<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="R03BMI.MainPage">

    <StackLayout>
        <Label Text="身長を入力してください" />
        <Entry Placeholder="m単位でもcm単位でも" x:Name="heighit" />
        
        <Label Text="体重を入力してください" />
        <Entry Placeholder="g単位でもkg単位でも" x:Name="weighit" />
        
        <Label Text="BMIが表示されます" x:Name="result"/>
        
        <Button Text="BMIを計算する" Clicked="Button_Clicked" />
        
        <Label Text="作者の名前が表示されます" x:Name="creater"/>
    </StackLayout>

</ContentPage>
